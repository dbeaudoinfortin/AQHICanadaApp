<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <!-- Pollutant Box -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@drawable/soft_border"
        android:minWidth="100dp"
        android:orientation="vertical"
        android:padding="5dp">
        <TextView
            android:id="@+id/txtPollutant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="PM 2.5"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Pollutant Value -->
    <LinearLayout
        android:id="@+id/pollutant_value_line"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:layout_gravity="center_vertical">

        <!-- ALERT ICON -->
        <ImageView
            android:id="@+id/imgPollutantIcon"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|start"
            android:contentDescription="Alert"
            android:src="@drawable/alert_warn" />

        <TextView
            android:id="@+id/txtPollutantValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="50.2"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPollutantUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingEnd="10dp"
            android:text="ppb"
            android:textSize="14sp"/>


        <TextView
            android:id="@+id/txtPollutantWarn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:text="Very High"
            android:paddingEnd="4dp"
            android:textSize="14sp"
            android:gravity="end"
            android:maxLines="3"
            android:ellipsize="end"/>



    </LinearLayout>
</LinearLayout>